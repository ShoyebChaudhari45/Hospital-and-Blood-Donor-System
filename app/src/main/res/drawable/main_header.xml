<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Adding a gradient for a more dynamic look -->
    <gradient
        android:startColor="#F80418"
        android:endColor="#FF6347"
        android:angle="45"/>

    <!-- Adjusting corner radii for a smoother curve -->
    <corners
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"/>

    <!-- Optional: Add shadow to create depth (requires API 21+) -->
    <padding android:left="5dp" android:right="5dp" android:bottom="5dp"/>
</shape>
