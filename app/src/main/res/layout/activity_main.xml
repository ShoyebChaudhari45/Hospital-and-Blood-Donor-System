<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/header_dashboard">

    <ImageView
        android:id="@+id/img_splash_logo"
        android:layout_width="283dp"
        android:layout_height="314dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/tv_register_cardtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_splash_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Welcome to the CareConnect ...."
        android:textAlignment="center"
        android:textColor="#F7F6FB"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_wave">
    </LinearLayout>

</RelativeLayout>
